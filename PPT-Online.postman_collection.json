{
  "info": {
    "name": "PPT Online API",
    "_postman_id": "3a6bcb64-5d03-4c7f-9bb3-3b10d1a8aa10",
    "description": "API REST para juego Piedra, Papel o Tijera online (rooms, users, partidas y score persistente).",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/health",
          "host": ["{{baseUrl}}"],
          "path": ["health"]
        }
      }
    },
    {
      "name": "Users",
      "item": [
        {
          "name": "Create user",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Marcos\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/users",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('status 200', function () { pm.response.to.have.status(200); });",
                  "const json = pm.response.json();",
                  "if (json.userId) pm.collectionVariables.set('userId', json.userId);"
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Rooms",
      "item": [
        {
          "name": "Create room",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"userId\": \"{{userId}}\",\n  \"name\": \"Marcos\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/rooms",
              "host": ["{{baseUrl}}"],
              "path": ["api", "rooms"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('status 200', function () { pm.response.to.have.status(200); });",
                  "const json = pm.response.json();",
                  "if (json.roomId) pm.collectionVariables.set('roomId', json.roomId);",
                  "if (json.shortCode) pm.collectionVariables.set('shortCode', json.shortCode);"
                ]
              }
            }
          ]
        },
        {
          "name": "Join room (by shortCode)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"userId\": \"{{userId2}}\",\n  \"name\": \"Facu\",\n  \"shortCode\": \"{{shortCode}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/rooms/join",
              "host": ["{{baseUrl}}"],
              "path": ["api", "rooms", "join"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('status 200', function () { pm.response.to.have.status(200); });",
                  "const json = pm.response.json();",
                  "if (json.roomId) pm.collectionVariables.set('roomId', json.roomId);"
                ]
              }
            }
          ]
        },
        {
          "name": "Start game",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"userId\": \"{{userId}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/rooms/{{roomId}}/start",
              "host": ["{{baseUrl}}"],
              "path": ["api", "rooms", "{{roomId}}", "start"]
            }
          }
        },
        {
          "name": "Play (player 1)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"userId\": \"{{userId}}\",\n  \"choice\": \"piedra\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/rooms/{{roomId}}/play",
              "host": ["{{baseUrl}}"],
              "path": ["api", "rooms", "{{roomId}}", "play"]
            }
          }
        },
        {
          "name": "Play (player 2)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"userId\": \"{{userId2}}\",\n  \"choice\": \"tijera\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/rooms/{{roomId}}/play",
              "host": ["{{baseUrl}}"],
              "path": ["api", "rooms", "{{roomId}}", "play"]
            }
          }
        },
        {
          "name": "Get room state",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/rooms/{{roomId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "rooms", "{{roomId}}"]
            }
          }
        }
      ]
    }
  ],
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "if (!pm.collectionVariables.get('baseUrl')) pm.collectionVariables.set('baseUrl', 'http://localhost:3001');",
          "if (!pm.collectionVariables.get('userId2')) pm.collectionVariables.set('userId2', '');"
        ]
      }
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3001"
    },
    {
      "key": "userId",
      "value": ""
    },
    {
      "key": "userId2",
      "value": ""
    },
    {
      "key": "roomId",
      "value": ""
    },
    {
      "key": "shortCode",
      "value": ""
    }
  ]
}
